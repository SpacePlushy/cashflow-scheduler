# Cashflow Scheduler Environment Configuration
# Copy this file to .env and configure for your environment
# WARNING: Never commit .env to version control!

# CORS Configuration
# Comma-separated list of allowed origins
# For development, defaults to localhost:3000,localhost:3001
# For production, set to your actual domain(s)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# API Authentication
# Set to 'true' to require API key authentication (recommended for production)
REQUIRE_API_KEY=false

# API Key
# Generate a secure key: openssl rand -hex 32
# Required if REQUIRE_API_KEY=true
API_KEY=your-secret-api-key-here

# Frontend API URL (for Next.js frontend)
NEXT_PUBLIC_API_URL=http://localhost:8000

# Log Level (optional)
# Options: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO
